
FROM node:current-alpine 

ENV USER=dorian
ENV UID=1000
ENV GID=1000

RUN apk update --no-cache && \
    apk add --no-cache \
    bash \
    npm && \
    npm i -g @vue/cli && \
    deluser node && \
    addgroup --gid "$GID" "$USER" && \
    adduser \
    --disabled-password \
    --gecos "" \
    --ingroup "$USER" \
    --uid "$UID" \
    "$USER" 

EXPOSE 8080

USER dorian

WORKDIR /app

ENTRYPOINT [ "/bin/bash" ]